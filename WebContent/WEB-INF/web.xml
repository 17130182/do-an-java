<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns="http://java.sun.com/xml/ns/javaee"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
   id="WebApp_ID" version="3.0">
   <display-name>Website Nông Sản</display-name>
      
   <servlet>
       <servlet-name>addCategory</servlet-name>
       <servlet-class>nongsan.webmvc.controller.admin.CategoryAddController</servlet-class>
   </servlet>
 
   <servlet-mapping>
       <servlet-name>addCategory</servlet-name>
       <url-pattern>/admin/cate/add</url-pattern>
   </servlet-mapping>
   
   <servlet>
       <servlet-name>listCategory</servlet-name>
       <servlet-class>nongsan.webmvc.controller.admin.CategoryListController</servlet-class>
   </servlet>
 
   <servlet-mapping>
       <servlet-name>listCategory</servlet-name>
       <url-pattern>/admin/cate/list</url-pattern>
   </servlet-mapping>
   <servlet>
       <servlet-name>addBoardnew</servlet-name>
       	<servlet-class>nongsan.webmvc.controller.admin.BoardnewAddController</servlet-class>
   </servlet>
 
   <servlet-mapping>
       <servlet-name>addBoardnew</servlet-name>
       <url-pattern>/admin/new/add</url-pattern>
   </servlet-mapping>
    <servlet>
       <servlet-name>listBoardnew</servlet-name>
       <servlet-class>nongsan.webmvc.controller.admin.BoardnewListController</servlet-class>
   </servlet>
 
   <servlet-mapping>
       <servlet-name>listBoardnew</servlet-name>
       <url-pattern>/admin/new/list</url-pattern>
   </servlet-mapping>
   <servlet>
   <servlet-name>deleteBoardnew</servlet-name>
       <servlet-class>nongsan.webmvc.controller.admin.BoardnewDeleteController</servlet-class>
   </servlet>
 
   <servlet-mapping>
       <servlet-name>deleteBoardnew</servlet-name>
       <url-pattern>/admin/new/delete</url-pattern>
   </servlet-mapping>
   <servlet>
   <servlet-name>editBoardnew</servlet-name>
       <servlet-class>nongsan.webmvc.controller.admin.BoardnewEditController</servlet-class>
   </servlet>
 
   <servlet-mapping>
       <servlet-name>editBoardnew</servlet-name>
       <url-pattern>/admin/new/edit</url-pattern>
   </servlet-mapping>
</web-app>